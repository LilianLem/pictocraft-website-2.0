{% extends "shop/base.html.twig" %}

{% block title %}{{ product.name }} {{ parent() }}{% endblock %}

{% block body %}
<main class="pt-4">
    <div class="container">
        <ol class="breadcrumb">
            {# TODO: fil d'Ariane correspondant au chemin réellement emprunté et non à celui correspondant à la catégorie par défaut du produit #}
            <li class="breadcrumb-item"><a href="{{ path("home") }}">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path("shop_home") }}">Boutique</a></li>
            {% if product.mainCategory.parent %}
                {% if product.mainCategory.parent.parent %}
                    <li class="breadcrumb-item"><a href="{{ path("shop_details", categoryService.routeSlugs(product.mainCategory.parent.parent)) }}">{{ product.mainCategory.parent.parent.name }}</a></li>
                {% endif %}
                <li class="breadcrumb-item"><a href="{{ path("shop_details", categoryService.routeSlugs(product.mainCategory.parent)) }}">{{ product.mainCategory.parent.name }}</a></li>
            {% endif %}
            <li class="breadcrumb-item"><a href="{{ path("shop_details", categoryService.routeSlugs(product.mainCategory)) }}">{{ product.mainCategory.name }}</a></li>
            <li class="breadcrumb-item active">{{ product.name }}</li>
        </ol>

        <div class="row">
            <div class="col-md-6 mb-4">
                <img src="{% include "shop/product/_product-image-link.html.twig" with { "imageString": product.image } %}" class="img-fluid" alt="" />
            </div>

            <div class="col-md-6 mb-4">
                <div class="p-4">
                    <h1 id="product-name">{{ product.name }}</h1>

                    <h2 id="product-subtitle">{{ product.subtitle }}</h2>

                    <div id="product-categories" class="category-badges mb-3">
                        {% include "shop/product/_product-category-badges.html.twig" with {"product": product} %}
                    </div>

                    <!--<strong><p style="font-size: 20px;">Description</p></strong>-->

                    <p id="product-short-description">
                        {{ product.description | u.truncate(300, "...", false) }}
                        {% if product.description|length > 300 %}<a href="#full-description">Voir plus</a>{% endif %}
                    </p>  <!-- TODO: trouver un filtre qui permette de couper uniquement à la fin de mots -->

                    <p class="lead" id="product-price">
                        {{ dump(preCartFinalPriceInfo) }}
                        {% if product.priceTtc != preCartFinalPriceInfo.discountedPrice %}
                            <span class="me-1" id="product-base-price" aria-details="Prix d'origine">
                                <del>{{ product.priceTtc | amount }}</del>
                            </span>
                        {% endif %}
                        <span id="product-final-price" aria-details="Prix final">{{ preCartFinalPriceInfo.discountedPrice | amount }}</span>
                    </p>

                    <form class="d-flex justify-content-left">
                        <div class="form-outline me-1" style="width: 100px;">
                            <input type="number" value="1" class="form-control" id="quantity" />
                        </div>
                        <button class="btn btn-primary ms-1" id="add-to-cart" type="submit">
                            Ajouter au panier
                            <i class="fas fa-shopping-cart ms-1"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <hr />

        <div class="row d-flex justify-content-center">
            <div id="attributes">
                <h4 class="my-4 h4 text-center">Propriétés</h4>

                <table class="table">
                    <tbody>
                    {% for attribute in product.attributes %}
                        <tr>
                            <td>{{ attribute.attribute.name }}</td>
                            <td>{{ attribute.value }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div id="full-description">
                <h4 class="my-4 h4 text-center">Détails</h4>

                <p>{{ product.description }}</p>
            </div>
        </div>

        <!--<div class="row">
            <div class="col-lg-4 col-md-12 mb-4">
                <img src="https://mdbootstrap.com/img/Photos/Horizontal/E-commerce/Products/11.jpg" class="img-fluid" alt="" />
            </div>

            <div class="col-lg-4 col-md-6 mb-4">
                <img src="https://mdbootstrap.com/img/Photos/Horizontal/E-commerce/Products/12.jpg" class="img-fluid" alt="" />
            </div>

            <div class="col-lg-4 col-md-6 mb-4">
                <img src="https://mdbootstrap.com/img/Photos/Horizontal/E-commerce/Products/13.jpg" class="img-fluid" alt="" />
            </div>
        </div>-->
    </div>
</main>
{% endblock %}
